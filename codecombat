
// CodeCombat Nivel 15   
public class AI {
    public static void main(String[] args) {
        // O ogro aparenta ser grande e lento. Movimentação irá te ajudar a evitar seus ataques mortais.
        hero.moveRight();
        hero.moveUp();
        hero.moveRight();
        hero.attack("Grumus");
        
    }
}


// CodeCombat Nivel 14
// Free the prisoner, defeat the guard and grab the gem.

public class AI {
    public static void main(String[] args) {
        // Liberte Patrick que está atrás da "Weak Door".
        hero.moveRight();
        hero.attack("Weak Door");
        // Mate o guarda, chamado "Two".
        hero.moveRight(2);
        hero.moveDown();
        hero.attack("Two");
        hero.attack("Two");
        // Pegue o diamante.
        hero.moveDown();
        hero.moveRight(1);
    }
}

// CodeCombat Nivel 13
// Derrote os ogros.
// Lembre-se que cada um deles recebem dois golpes.

public class AI {
    public static void main(String[] args) {
        hero.moveRight(2);
        hero.shield();
        hero.attack("Rig");
        hero.attack("Rig");
        hero.attack("Gurt");
        hero.attack("Gurt");
        hero.attack("Ack");
        hero.attack("Ack");
        hero.moveRight(2);
    }


// CodeCombat Nivel 12
// Você precisa de uma senha para abrir a Porta da Biblioteca!
// A senha está nas Sugestões!
// Clique no botão azul acima do editor de código.
// Não se esqueça que letras maiúsculas e minúsculas geram comandos diferentes.

public class AI {
    public static void main(String[] args) {
        hero.moveRight(); 
        hero.say("Hush");  // ∆
        hero.moveRight();
    }
}
